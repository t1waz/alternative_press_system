<MessageWindow>:
    message_input: input_message
    message_relay: relay_message
    size_hint: 0.7, 0.7
    title_align: 'center'
    title: 'MODULES STATUS'
    BoxLayout:
        orientation: 'horizontal'
        Label:
            size_hint: .4, 1
        BoxLayout:
